@model TipoCuenta

@{
    ViewData["Title"] = "Borrar tipos cuentas";
}


<h5>Estas seguro que deseas borrar el tipo cuenta: @Model.Nombre</h5>

<form asp-action="BorrarTipoCuentaPorId">
    <!--ESTO ME SIRVE PARA VALIDAR QUE EL ID COINCIDA CON EL TIOP DE USUARIO Y EN BASE A ESO, SE MUETRA EL FORMULARIO-->
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-primary">Borrar</button>
    <a class="btn btn-primary" asp-action="Index">Cancelar</a>

</form>

